{
  "name": "felix-arntz/wp-image-sharer",
  "description": "Plugin to share images directly to a WordPress site via Web Share Target API.",
  "version": "1.0.0",
  "license": "GPL-2.0-or-later",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "plugin",
    "image",
    "share",
    "web",
    "sharee",
    "target",
    "api",
    "progressive",
    "pwa"
  ],
  "homepage": "https://wordpress.org/plugins/image-sharer/",
  "authors": [
    {
      "name": "Felix Arntz",
      "email": "hello@felix-arntz.me",
      "homepage": "https://felix-arntz.me"
    }
  ],
  "support": {
    "issues": "https://github.com/felix-arntz/wp-image-sharer/issues"
  },
  "autoload": {
    "psr-4": {
      "Felix_Arntz\\WP_Image_Sharer\\": "inc"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Felix_Arntz\\WP_Image_Sharer\\Tests\\PHPUnit\\Framework\\": "tests/phpunit/framework"
    }
  },
  "require": {
    "php": ">=7.0",
    "composer/installers": "^1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
    "wp-coding-standards/wpcs": "^2",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^6",
    "brain/monkey": "^2"
  },
  "scripts": {
    "phplint": "find -L .  -path ./vendor -prune -o -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
    "phpcs": "@php ./vendor/bin/phpcs",
    "phpmd": "@php ./vendor/bin/phpmd inc text phpmd.xml.dist",
    "phpunit": "@php ./vendor/bin/phpunit",
    "phpunit-cov": "@php ./vendor/bin/phpunit --coverage-clover tests/logs/clover.xml",
    "phpunit-integration": "@php ./vendor/bin/phpunit -c phpunit-integration.xml.dist",
    "phpunit-integration-cov": "@php ./vendor/bin/phpunit -c phpunit-integration.xml.dist --coverage-clover tests/logs/clover.xml"
  }
}